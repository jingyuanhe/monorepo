{
  "name": "haiercash-cli",
  "private": false,
  "version": "0.0.53",
  "description": "A front-end cli for starting your project quickly",
  "type": "commonjs",
  "main": "./bin/cli.js",
  "bin": {
    "xwg": "./bin/cli.js"
  },
  "license": "MY LICENSE",
  "author": "jingyuanhe",
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf lib && tsc --outDir lib --module CommonJS",
    "lint": "eslint . --ext '.js,.ts' --fix",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p -i CHANGELOG.md -s"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "lib",
    "bin",
    "README",
    "LICENSE"
  ],
  "keywords": [
    "haiercash cli"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "download-git-repo": "^3.0.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.42.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "typescript": "^4.9.4",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
